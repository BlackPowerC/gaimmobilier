{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Se connecter
{% endblock %}

{% block body %}
    <div class="container mt-4">

        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey | trans(error.messageData, "security") }}
            </div>
        {% endif %}

        <form method="POST" action="{{ path("immos.admin.login") }}">
            <div class="form-group">
                <label for="username">Nom d'utilisateur</label>
                <input required id="username" type="text" name="_username" class="form-control" value="{{ lastUsername }}"/>
            </div>
            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input required id="password" type="password" name="_password" class="form-control"/>
            </div>

            <input type="hidden" name="_target_path" value="/" />
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

            <button type="submit" class="btn btn-primary">
                Se connecter
            </button>
        </form>
    </div>
{% endblock %}
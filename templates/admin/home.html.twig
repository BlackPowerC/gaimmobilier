{% extends "base.html.twig" %}

{% block title %}
    {{ parent() }} - Gérer les biens immobiliers
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Gérer les biens immobiliers</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for immo in immos %}
                <tr>
                    <td>{{ immo.title }}</td>
                    <td>
                        <a class="btn btn-warning" href="{{ path("immos.admin.edit", {id: immo.id}) }}">
                            <i class="fa fa-pencil"></i>
                        </a>
                        <a class="btn btn-primary" href="{{ path("immos.admin.new") }}">
                            <i class="fa fa-plus"></i>
                        </a>
                        <a class="btn btn-danger" href="{{ path("immos.admin.delete", {id: immo.id}) }}">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}